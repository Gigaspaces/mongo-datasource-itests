<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:os-sla="http://openspaces.gigaspaces.org/schema/sla"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://openspaces.gigaspaces.org/schema/sla 
	   http://openspaces.gigaspaces.org/schema/10.0/sla/openspaces-sla.xsd">

	<!-- The SLA bean used when deploying this processing unit to the Service 
		Grid. -->

	<os-sla:sla cluster-schema="partitioned-sync2backup"
		number-of-instances="2" number-of-backups="1" max-instances-per-vm="1">
	</os-sla:sla>
</beans>